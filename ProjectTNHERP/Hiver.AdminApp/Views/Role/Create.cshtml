@model Hiver.ViewModels.System.Roles.RoleCreateRequest

@{
    ViewData["Title"] = "Tạo mới";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@section Scripts {
    <script>
        $( "p" ).click(function() {
          $( this ).slideUp();
        });
    </script>
}

<div class="container-fluid">
    <h1 class="mt-4">Tạo mới</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Tạo mới</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="Role">Về danh sách</a>
        </div>

        <div class="card-body">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="ControllerName" class="control-label"></label>
                        <input asp-for="ControllerName" class="form-control" />
                        <span asp-validation-for="ControllerName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ActionName" class="control-label"></label>
                        <input asp-for="ActionName" class="form-control" />
                        <span asp-validation-for="ActionName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-4">
                                <select id="select1" onchange="validateSelectBox(this)" asp-items="@ViewBag.NameRole" class="control-label">
                                    <option value="">--Select--</option>  
                                </select>
                            </div>
                            <div class="col-4">
                                <select id="select2" asp-items="@ViewBag.PositionRole" class="control-label">
                                    <option value="">--Select--</option>  
                                </select>
                            </div>
                            <div class="col-4">
                                <p id="btnvalueName">dsdsa</p>
                            </div>
                        </div>
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" value="" id="valueName" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>

                        <p>First Paragraph</p>
                        <p>Second Paragraph</p>
                        <p>Yet one more Paragraph</p>
                    </div>
                    
                    <div class="form-group">
                        <input type="submit" value="Lưu lại" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>