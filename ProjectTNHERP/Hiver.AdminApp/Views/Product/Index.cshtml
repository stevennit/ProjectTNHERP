@using Hiver.ViewModels.Common;
@model PagedResult<Hiver.ViewModels.Catalog.Products.ProductVm>

@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@section Css{
    <!-- ================== BEGIN PAGE LEVEL STYLE ================== -->
    <link href="/assets/plugins/datatables.net-bs4/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
    <link href="/assets/plugins/datatables.net-responsive-bs4/css/responsive.bootstrap4.min.css" rel="stylesheet" />
    <!-- ================== END PAGE LEVEL STYLE ================== -->
}

@section Scripts{
    <!-- ================== BEGIN PAGE LEVEL JS ================== -->
    <script src="/assets/plugins/datatables.net/js/jquery.dataTables.min.js"></script>
    <script src="/assets/plugins/datatables.net-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="/assets/plugins/datatables.net-responsive/js/dataTables.responsive.min.js"></script>
    <script src="/assets/plugins/datatables.net-responsive-bs4/js/responsive.bootstrap4.min.js"></script>
    <script src="/assets/js/demo/table-manage-default.demo.js"></script>
    <!-- ================== END PAGE LEVEL JS ================== -->

}

<div class="row">
    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-3 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="Product">Tạo mới</a>
                </div>
                <div class="col-md-9 col-xs-12">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-3">
                                <input type="text" value="@ViewBag.Code" name="code" placeholder="Tìm theo mã" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <input type="text" value="@ViewBag.Name" name="name" placeholder="Tìm theo tên" class="form-control" />
                            </div>
                            <div class="col-md-3">
                                <select name="categoryId" onchange="this.form.submit()" asp-items="@ViewBag.Categories" class="form-control">
                                    <option>--Chọn danh mục--</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <button type="submit" class="btn btn-primary">Tìm</button>
                                <button type="button" onclick="window.location.href='/Product/Index'" class="btn btn-dark">Reset</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">

            </div>
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-td-valign-middle dataTable no-footer dtr-inline" id="data-table-default">
                    <thead>
                        <tr>
                            <th>
                                Sản phẩm
                            </th>
                            <th>
                                Ngày tạo
                            </th>
                            <th>
                                Người tạo
                            </th>
                            <th>
                                Hành động
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td class="with-img">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0 mr-2">
                                            <div class="avatar-sm bg-light rounded p-1">
                                                <img src="@(Configuration["BaseAddress"] + item.Image)" alt="" class="img-rounded height-40 width-40">
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <h5 class="fs-14 mb-1">
                                                <a href="/Product/Details/@item.Id" class="text-dark">@Html.DisplayFor(modelItem => item.Name)</a>
                                            </h5><p class="text-muted mb-0">Mã SP : <span class="fw-medium">@Html.DisplayFor(modelItem => item.Code)</span></p>
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CreateBy)
                                </td>
                                <td>
                                    @*@Html.ActionLink("Xem", "Details", new { id = item.Id }, new { @class = "text-reset text-decoration-underline" }) |*@
                                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { @class = "text-reset text-decoration-underline" })
                                    @*@Html.ActionLink("Gán danh mục", "CategoryAssign", new { id = item.Id })*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @await Component.InvokeAsync("Pager", Model)
        </div>
    </div>
</div>