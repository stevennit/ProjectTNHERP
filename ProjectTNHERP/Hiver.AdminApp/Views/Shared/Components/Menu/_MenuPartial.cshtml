@model IEnumerable<Hiver.ViewModels.Common.MenuViewModel>

@foreach (var menu in Model)
{
    if (menu.Children.Any())
    {
    <li class="has-sub">
        <a href="javascript:;">
            <b class="caret"></b>
			<i class="@menu.IconClass"></i>
			<span>@menu.MenuName</span>
        </a>
        <ul class="sub-menu">
            <partial name="Components/Menu/_MenuPartial" model="menu.Children" />
        </ul>
    </li>
    }
    else
    {
        <li class="has-sub">
            @{
                if (string.IsNullOrEmpty(menu.Url))   //Add either onclick event or href.
                {
                    <a class="javascript:;">
                        <span>@menu.MenuName</span>
                    </a>
                }
                else
                {
                    <a href="@menu.Url" class="javascript:;">
			            <i class="@menu.IconClass"></i>
                        <span>@menu.MenuName</span>
                    </a>
                }
            }
        </li>
    }
}